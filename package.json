{
  "name": "@opentf/react-code-editor",
  "version": "0.2.0",
  "description": "A simple code editor for React JS.",
  "keywords": [
    "simple",
    "react",
    "code",
    "editor",
    "syntax",
    "highlight",
    "format",
    "prettier"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "eslint src/** --fix",
    "check-types": "tsc",
    "ci": "pnpm build && pnpm lint && pnpm check-types",
    "publish-packages": "pnpm run ci && changeset version && changeset publish"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-tech-foundation/react-code-editor.git"
  },
  "author": "Thanga Ganapathy",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@opentf/eslint-config-base": "^0.1.0",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/prettier": "^2.7.2",
    "@types/react": "^18.0.28",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^6.7.0",
    "typescript": "5.0.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "dependencies": {
    "@opentf/utils": "^0.18.0",
    "prettier": "2.8.5"
  }
}
